{
    "description": "Connects the Kaleidoscope.ValueObjects with LostInTranslation so alt and title will get translated automatically.\n\n",
    "type": "neos-package",
    "name": "sitegeist/kaleidoscope-valueobjects-lostintranslation",
    "license": "GPL-3.0-or-later",
    "require": {
        "sitegeist/kaleidoscope-valueobjects": "^1.2.1",
        "sitegeist/lostintranslation": "^2.6.0"
    },
    "require-dev": {
        "phpstan/phpstan": "^1.10.0",
        "squizlabs/php_codesniffer": "^3.7"
    },
    "scripts": {
        "fix:style": "phpcbf --colors --standard=PSR12 Classes",
        "fix": [
            "@fix:style"
        ],
        "test:style": "phpcs --colors -n --standard=PSR12 Classes",
        "test:stan": "phpstan -v analyse Classes",
        "test:functional": "bin/phpunit --bootstrap Tests/FunctionalTestBootstrap.php --configuration Tests/FunctionalTests.xml",
        "test": [
            "@test:style",
            "@test:stan"
        ]
    },
    "autoload": {
        "psr-4": {
            "Sitegeist\\Kaleidoscope\\ValueObjects\\LostInTranslation\\": "Classes/"
        }
    },
    "extra": {
        "neos": {
            "package-key": "Sitegeist.Kaleidoscope.ValueObjects.LostInTranslation"
        }
    }
}
